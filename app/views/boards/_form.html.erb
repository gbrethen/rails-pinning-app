<%= form_for(@board) do |f| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6 form-horizontal">
	  <div class="form-group">
		<label for="name" class="col-md-2 control-label">Name</label>
		<div class="col-md-4">
			<%= f.text_field :name, class: 'form-control' %>
		</div>
	  </div>
	  <div class="form-group">
		<label for="user_id" class="col-md-2 control-label">User</label>
		<div class="col-md-4">
			<%= f.text_field :user_id, :value => current_user.full_name, class: 'form-control' %>
		</div>
	  </div>
	  <% if !@followers.nil? %>
		<%= f.fields_for :board_pinners do |p| %>
			<div class="form-group">
				<%= select_tag "board[board_pinners_attributes][0][user_id]", options_from_collection_for_select(@followers, :id, :full_name), class: "form-control", include_blank: true %>
			</div>
		<% end %>
	  <% end %>
	  
	  <div class="form-group">
			<div class="col-md-2"></div>
			<div class="col-md-4">
				<%= f.submit 'Submit Change', :class => 'btn btn-default' %>
			</div>
	  </div>
  </div>
<% end %>
